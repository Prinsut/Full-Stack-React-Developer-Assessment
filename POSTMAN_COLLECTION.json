    {
      "name": "Tasks (CRUD)",
      "item": [
        {
          "name": "Get All Tasks",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer YOUR_JWT_TOKEN_HERE"
              }
            ],
            "url": {
              "raw": "http://localhost:5000/api/tasks",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "tasks"]
            }
          }
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer YOUR_JWT_TOKEN_HERE"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Complete assessment\",\n  \"description\": \"Finish all 4 tasks\"\n}"
            },
            "url": {
              "raw": "http://localhost:5000/api/tasks",
              "protocol": "http",
              "host": ["localhost"],
